  <head>
    <meta charset="utf-8" />

    <!-- Uncomment to make IE8 render like IE7 -->
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <div class="bg">
      <div class="row">
        <div class="large-3 columns large-centered">
          <br />
          <%= image_tag "logo.png" %>
          <br />
        </div>
        <div class="large-10 columns large-centered">
         <h6 style="text-align:center;font-weight:bold;">SUPPORT CAUSES YOU CARE ABOUT!</h6>
         <p style="text-align:center;font-size:14px;">EasyFunds allows you to find and support causes that matters to you. From social fundraisers to kickstarter campaigns, there are a variety of causes to support.</p>
        </div>
    </div>
    </div>
  <br />
    <div class="row">
      <div class="large-12 columns" style="min-height:500px;">
         <!-- campaign runinng goes here -->
          <%= yield %>
      </div>
     
    </div>
  

    <div style="background-color:black;;">
    <div class="row">
      <div class="large-12 columns">
       <p style="font-size:12px; text-align:center; color:white;margin-top:10px;">All Rights Reserved &copy; EasyFunds | MPower Hackathon</p>
      </div>
    </div>
    </div>


    
    <%= javascript_include_tag "application" %>
  </body>
</html>
